@using CSIProductConfigurationCommon.Models;

@model List<ConfigurationTypeParameter>

@{int i = 1; }

@foreach (ConfigurationTypeParameter item in Model)
{

    if (i % 2 == 1)
    {
        @Html.Raw("<div class=\"row\">")
    }


    <div class="form-group col-md-6">


        @Html.Label(item.ParameterName, new { @class = "control-label col-md-4" })




        <div class="col-md-8">

            @if (item.IsHasValues)
            {
                @Html.DropDownList(item.ParameterName + "ParamDropDown", new SelectList(item.ParameterValues, "ParameterID", "Label"), "-- Please choose --", htmlAttributes: new { @class = "form-control" })
            }
            else
            {

                @Html.Editor(item.ParameterName + "Editor", new { htmlAttributes = new { @class = "form-control", @id = item.ParameterName + "Editor", @data_val = "true", @data_val_required = "Gimme" } })
                @Html.ValidationMessage(item.ParameterName + "Editor", htmlAttributes: new { @class = "text-danger" })
            }

        </div>


    </div>

    if (i % 2 == 0 || (i % 2 == 1 && i == Model.Count()))
    {
        @Html.Raw("</div>")
    }



    i++;

}

