<hr />


<div class="row">
    <div class="col-md-12">


        @Html.DropDownList("configurationTypeDropDown", new SelectList(Model.ConfigurationTypes, "ID", "Name"), "-- Choose configuration type --", htmlAttributes: new { @class = "form-control" })

    </div>
</div>

<div class="row">
    <div class="col-md-4">
        @Html.LabelFor(m => m.Name)

    </div>
    <div class="col-md-8">
        @Html.TextBoxFor(m => m.Name)

    </div>

    <div class="col-md-4">
        @Html.LabelFor(m => m.Description)

    </div>



    <div class="col-md-8">
        @Html.TextBoxFor(m => m.Description)

    </div>
</div>



<div id="configurationTypeContent"></div>

<script>

    $('[id^=configurationTypeDropDown]').on('change', function () {
        if (this.selectedIndex == 0) {
            return;
        }
        var id = this.value;
        $('#configurationTypeContent').load(
            "/Home/ConfigurationTypeParameterList/" + id,
            function (response, status) {

                return;
            });
        return;
    });

</script>

